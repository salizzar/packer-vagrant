{
  "variables": {
    "box_ostype":     "centos",
    "box_osversion":  "6.5",
    "box_nick":       "6.5",
    "box_arch":       "x64",
    "box_type":       "base",
    "box_memory":     "512",
    "box_cpus":       "1",

    "ssh_user":       "vagrant",
    "ssh_pass":       "vagrant",
    "hostname":       "vagrant-centos-6.5",
    "domain":         "vagrantup.com"
  },

  "builders": [
    {
      "type":               "virtualbox-iso",
      "vm_name":            "{{ user `box_ostype` }}-{{ user `box_nick` }}-{{ user `box_arch` }}-{{ user `box_type` }}",
      "guest_os_type":      "RedHat_64",
      "disk_size":          "4096",

      "iso_url":            "http://mirror.globo.com/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-netinstall.iso",
      "iso_checksum":       "939fd1d87c11ffe7795324438b85adfb",
      "iso_checksum_type":  "md5",

      "http_directory":     "http",

      "ssh_username":       "root",
      "ssh_password":       "{{ user `ssh_pass` }}",
      "ssh_wait_timeout":   "100000s",

      "shutdown_command":   "echo {{ user `ssh_user` }} | sudo halt -p",

      "vboxmanage": [
        [ "modifyvm", "{{ .Name }}", "--memory", "{{ user `box_memory` }}" ],
        [ "modifyvm", "{{ .Name }}", "--cpus",   "{{ user `box_cpus`   }}" ]
      ],

      "boot_command": [
        "<tab> ",
        "text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg ",
        "lang=en_US.UTF-8 ",
        "<enter><wait>"
      ]
    }
  ],

  "post-processors": [
    {
      "type":                 "vagrant",
      "output":               "{{ user `box_ostype` }}-{{ user `box_nick` }}-{{ user `box_arch` }}-{{ user `box_type` }}.box"
    }
  ],

  "provisioners": [
    {
      "execute_command": "echo 'root' | sh '{{ .Path }}'",
      "type": "shell",
      "override": {
        "virtualbox-iso": {
          "scripts": [
            "scripts/locale.sh",
            "scripts/sudoers.sh",
            "scripts/sshd.sh",
            "scripts/virtualbox.sh",
            "scripts/vagrant.sh"
          ]
        }
      }
    }
  ]
}
